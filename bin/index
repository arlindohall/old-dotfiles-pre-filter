#!/usr/bin/env ruby

require 'pathname'

class Index
    def initialize base
        @base           = base

        @directories    = []
        @files          = []
    end

    def build_index
        @base.each_child do |child|
            if child.directory?
                @directories << child

                Index.new(child).write
            elsif child.file?
                @files << child
            end
        end
    end

    def write
        return if is_git?

        build_index

        @base.join('INDEX.md').write index
    end

    private

        def index
            <<~index_file
                # Index\n
                ## Directories\n
                #{directory_entries}\n
                ## Files\n
                #{file_entries}\n\n
                [Return to Parent...](../INDEX.md)

            index_file
        end

        def directory_entries
            @directories.map(&:basename)
                .map(&:to_s)
                .sort
                .map{ |name| "- [#{name}](#{name}/INDEX.md)" }
                .join("\n")
        end

        def file_entries
            @files.map(&:basename)
                .map(&:to_s)
                .filter{ |name| !name.eql? "INDEX.md" }
                .sort
                .map{ |name| "- [#{name}](#{name})" }
                .join("\n")
        end

        def is_git?
            @base.basename.to_s.eql? ".git"
        end
end

Index.new(Pathname.new('.')).build_index
