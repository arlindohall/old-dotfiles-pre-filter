#!/usr/bin/env ruby
# code: language=ruby

require "pathname"

require_relative "lib/workspace_each"

class WorkspaceStatus < WorkspaceEach
  def initialize(path)
    super(path)
  end

  def act(child)
    inspect_git_repo(child)
  end

  def inspect_git_repo(repo)
    print_name(repo)
    dump_git(repo)
  end

  private

  def dump_git(child)
    within_child(child, "git status")
  end
end

WorkspaceStatus.new(".").act_git_repos
