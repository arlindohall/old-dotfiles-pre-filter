#!/usr/bin/env ruby
# code: language=ruby

class PullRequest
  def create!
    if branch == "main"
      usage("Must be called with a branch (not main) checked out")
    end
    usage("No arguments allowed") unless ARGV.empty?

    system command
  end

  def usage(*messages)
    puts "Usage: create-pr"

    messages.each do |message|
      print " - "
      puts message
    end

    exit -1
  end

  private

  def command
    "open #{remote}/pull/new/#{branch}"
  end

  def remote
    non_git_url.split.drop(1).first
  end

  def non_git_url
    push_target
      .gsub(".git", "")
      .gsub("ssh://", "https://")
      .gsub("http://", "https://")
  end

  def push_target
    `git remote -v`.lines.find { |line| line.include?("push") }
  end

  def branch
    branch_output.split.last
  end

  def branch_output
    `git branch`
  end
end

PullRequest.new.create!
